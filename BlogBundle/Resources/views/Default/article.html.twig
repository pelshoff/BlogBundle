{% extends '::base.html.twig' %}

{% block body %}

    <article>
        <h2>{{ article.name }}</h2>
		{% include "PelshoffBlogBundle:Default:article-info.html.twig" %}
        {{ article.leader|raw }}
        {{ article.content|raw }}
		{% include "PelshoffBlogBundle:Default:article-info.html.twig" %}
    </article>

    <ul class="nav nav-list">
        <li><a href="#commentForm" class="openComments"><i class="icon-chevron-down"></i> Post a comment <i class="icon-chevron-down"></i></a></li>
